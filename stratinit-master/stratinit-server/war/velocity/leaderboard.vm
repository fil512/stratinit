<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">
<HTML>
<HEAD><TITLE>Strategic Initiative</TITLE>
<LINK REL=StyleSheet HREF="/stratinit/css/style.css" TYPE="text/css" MEDIA=screen>
</HEAD>
<BODY>
#include ("/fragments/top.html")
#include ("/fragments/menu.html")
<H2>Strategic Initiative Leader Board</H2>
<table border="1" cellspacing="0" bordercolor="#000000" cellpadding="3">
      <tr>
        <th>
          Name
        </th>
        <th>
          Won
        </th>
        <th>
          Played
        </th>
        <th>
          Win%
        </th>
      </tr>
#foreach( $player in $leaderBoard.players )
   #if ( $player.played > 5 )
      <tr>
        <td align=right>
          $player.username
        </td>
        <td>
          $player.wins
        </td>
        <td>
          $player.played
        </td>
        <td>
        #set($perc = 100 * $player.wins / $player.played)
        $perc%
        </td>
      </tr>
   #end
#end
</table>
  <!-- end right column -->
</td>
</tr>
</table>
</BODY>
