<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />
	<context:component-scan base-package="com.kenstevens.stratinit" />

	<bean id="httpInvoker" class="com.kenstevens.stratinit.site.server.BasicAuthenticationCommonsHttpInvokerRequestExecutor"/>

	<bean id="stratInit"
		class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
    	<property name="serviceUrl" value="http://www.strategicinitiative.org:8080/stratinit/remoting/StratInit" />
<!--
		<property name="serviceUrl" value="http://localhost:9999/remoting/StratInit" />
-->
		<property name="serviceInterface" value="com.kenstevens.stratinit.remote.StratInit" />
		<property name="httpInvokerRequestExecutor" ref="httpInvoker"/>
<!--
    	<property name="serviceUrl" value="http://localhost:8080/stratinit/remoting/StratInit" />
-->
	</bean>
</beans>
